@model DATN.Models.Account

@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="app-home">
        <div class="grid wide">
            <div class="row pad-16">
                <div class="col c-6">
                    <div class="row layout-v">
                        <div class="col c-12">
                            <div class="home__continue-task">
                                <div class="home-card__container pad-16">
                                    <div class="home__card--header">
                                        <h3 class="home__card--header-title">Tiếp tục làm bài</h3>
                                        <p class="home__card--header-text">Click để đưa về bài tập mà lần cuối bạn hoàn thành.</p>
                                    </div>
                                    <div class="last-task-card">
                                        <div class="last-task-card--icon">
                                            <img src="~/asset/image/task-icon.svg" alt="">
                                        </div>
                                        @if (ViewBag.listExerciseAttemp != null)
                                        {
                                            <a asp-controller="App" asp-action="CodePage" asp-route-exerciseId="@ViewBag.listExerciseAttemp.Exercise.ExcerciseId">
                                                <div class="last-task-card--infor">
                                                    <h4 class="last-task-card--name">@ViewBag.listExerciseAttemp.Exercise.ExcerciseName</h4>
                                                    <div class="last-task-card--desc">
                                                        <p class="home-card--text mgl-8">
                                                            Độ khó:
                                                            <span class="bold">@ViewBag.listExerciseAttemp.Exercise.Level.DifficultName</span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="App" asp-action="Challenge">
                                                <div class="last-task-card--infor">
                                                    <h4 class="last-task-card--name"></h4>
                                                    <div class="last-task-card--desc">
                                                        <p class="home-card--text">
                                                            Thời gian khuyến nghị:
                                                            <span class="bold">5 phút</span>
                                                        </p>
                                                        <p class="home-card--text mgl-8">
                                                            Độ khó:
                                                            <span class="bold"></span>
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mgt-16 layout-h">
                            @if (ViewBag.listChallenge.Count == 0)
                            {
                                <div class="col col-6">
                                    <div class="home-card">
                                        <div class="pad-16 full-height layout-v">
                                            <div class="home__card--header">
                                                <h3 class="home__card--header-title">Chủ đề mới</h3>
                                            </div>
                                            <img class="home__card-challenge-icon" src="./asset/image/arcade.svg" alt="">
                                            <p class="home__card-text text-cent">Sắp được mở</p>
                                        </div>

                                        <div class="overlay-challenge">
                                            <div class="lock-challenge">
                                                <svg style="width: 56px;height: 56px; fill: #fff;" width="24" height="24" viewBox="0 0 24 24"><path d="M18.81 8.018h-1.135V5.742c0-3.14-2.542-5.69-5.675-5.69s-5.675 2.55-5.675 5.69v2.276H5.19a2.272 2.272 0 0 0-2.27 2.275v11.379a2.272 2.272 0 0 0 2.27 2.275h13.62a2.272 2.272 0 0 0 2.27-2.275V10.293a2.272 2.272 0 0 0-2.27-2.275zM12 18.258a2.272 2.272 0 0 1-2.27-2.276A2.272 2.272 0 0 1 12 13.707a2.272 2.272 0 0 1 2.27 2.275A2.272 2.272 0 0 1 12 18.258zm3.518-10.24H8.482V5.742A3.526 3.526 0 0 1 12 2.215a3.526 3.526 0 0 1 3.519 3.527v2.276z"></path></svg>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col col-6">
                                    <div class="home-card">
                                        <div class="pad-16 full-height layout-v">
                                            <div class="home__card--header">
                                                <h3 class="home__card--header-title">Chủ đề mới</h3>
                                            </div>
                                            <img class="home__card-challenge-icon" src="./asset/image/arcade.svg" alt="">
                                            <p class="home__card-text text-cent">Sắp được mở</p>
                                        </div>

                                        <div class="overlay-challenge">
                                            <div class="lock-challenge">
                                                <svg style="width: 56px;height: 56px; fill: #fff;" width="24" height="24" viewBox="0 0 24 24"><path d="M18.81 8.018h-1.135V5.742c0-3.14-2.542-5.69-5.675-5.69s-5.675 2.55-5.675 5.69v2.276H5.19a2.272 2.272 0 0 0-2.27 2.275v11.379a2.272 2.272 0 0 0 2.27 2.275h13.62a2.272 2.272 0 0 0 2.27-2.275V10.293a2.272 2.272 0 0 0-2.27-2.275zM12 18.258a2.272 2.272 0 0 1-2.27-2.276A2.272 2.272 0 0 1 12 13.707a2.272 2.272 0 0 1 2.27 2.275A2.272 2.272 0 0 1 12 18.258zm3.518-10.24H8.482V5.742A3.526 3.526 0 0 1 12 2.215a3.526 3.526 0 0 1 3.519 3.527v2.276z"></path></svg>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                            else if (ViewBag.listChallenge[0] != null)
                            {
                                <div class="col col-6">
                                    <a asp-action="ListExercise" asp-controller="App" asp-route-challengeId="@ViewBag.listChallenge[0].ChallengeId">
                                        <div class="home-card">
                                            <div class="pad-16 full-height layout-v">
                                                <div class="home__card--header">
                                                    <h3 class="home__card--header-title">@ViewBag.listChallenge[0].ChallengeName</h3>
                                                </div>
                                                <img class="home__card-challenge-icon" src="~/asset/image/arcade.svg" alt="">
                                                <p class="home__card-text text-cent">Luyện tập kỹ năng lập trình theo từng chủ đề</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>

                            }
                            @if (ViewBag.listChallenge.Count > 1)
                            {
                                <div class="col col-6">
                                    <a asp-action="ListExercise" asp-controller="App" asp-route-challengeId="@ViewBag.listChallenge[1].ChallengeId">
                                        <div class="home-card">
                                            <div class="pad-16 full-height layout-v">
                                                <div class="home__card--header">
                                                    <h3 class="home__card--header-title">@ViewBag.listChallenge[1].ChallengeName</h3>
                                                </div>
                                                <img class="home__card-challenge-icon" src="~/asset/image/arcade.svg" alt="">
                                                <p class="home__card-text text-cent">Luyện tập kỹ năng lập trình theo từng chủ đề</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="col col-6">
                                    <div class="home-card">
                                        <div class="pad-16 full-height layout-v">
                                            <div class="home__card--header">
                                                <h3 class="home__card--header-title">New Challenge</h3>
                                            </div>
                                            <img class="home__card-challenge-icon" src="./asset/image/arcade.svg" alt="">
                                            <p class="home__card-text text-cent">Comming Soon</p>
                                        </div>

                                        <div class="overlay-challenge">
                                            <div class="lock-challenge">
                                                <svg style="width: 56px;height: 56px; fill: #fff;" width="24" height="24" viewBox="0 0 24 24"><path d="M18.81 8.018h-1.135V5.742c0-3.14-2.542-5.69-5.675-5.69s-5.675 2.55-5.675 5.69v2.276H5.19a2.272 2.272 0 0 0-2.27 2.275v11.379a2.272 2.272 0 0 0 2.27 2.275h13.62a2.272 2.272 0 0 0 2.27-2.275V10.293a2.272 2.272 0 0 0-2.27-2.275zM12 18.258a2.272 2.272 0 0 1-2.27-2.276A2.272 2.272 0 0 1 12 13.707a2.272 2.272 0 0 1 2.27 2.275A2.272 2.272 0 0 1 12 18.258zm3.518-10.24H8.482V5.742A3.526 3.526 0 0 1 12 2.215a3.526 3.526 0 0 1 3.519 3.527v2.276z"></path></svg>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            }
                        </div>
                        <div class="col c-12 mgt-16">
                            <div class="home__continue-task">
                                <div class="home-card__container pad-16">
                                    <div class="home__card--header">
                                        <h3 class="home__card--header-title">Lời khuyên</h3>
                                        <p class="home__card--header-text">Mong những gì chúng tôi cung cấp sau đây sẽ giúp ích cho bạn</p>
                                        <p class="home__card--header-text-advice">
                                            Chưa có ai thành công mà chưa từng nếm mùi thất bại.Trường học không bao giờ dạy chúng ta những bài học sau khi thất bại nhưng trường đời sẽ dạy chúng ta điều đó.
                                            Chính vì vậy, hãy học cách chấp nhận thất bại như một phần của quá trình tiến tới thành công và rút ra những bài học từ những thất bại đó.
                                            Không phải lúc nào bạn cũng thành công nhưng đừng vì thế mà sợ hãi không dám theo đuổi ước mơ của mình. Đa phần mọi người đều nói “ Tôi muốn thành đạt” nhưng họ không muốn điều đó một cách điên cuồng, không thật sự phấn đấu, nỗ lực vì nó và khi thất bại thì họ từ bỏ.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col c-6 layout-h">
                    <div class="row layout-h ful-width">
