@model DATN.Models.LanguageSupport

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết</h1>

<br />
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="display:flex; flex-direction:row;">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên chủ đề</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Exercise.Challenge.ChallengeName </p>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên bài tập</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Exercise.ExcerciseName </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LanguageSupId" class="col-sm-3 col-form-label">ID</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.LanguageSupId</p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên ngôn ngữ</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Language.LanguageName</p>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="FileMain" class="col-sm-3 col-form-label">File Main</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.FileMain</p>
                                </blockquote>
                                <div>
                                    <a class="btn btn-outline-success btn-fw" asp-action="ViewFile" asp-route-id="@Model.LanguageSupId" asp-route-path="@ViewBag.pathMain" asp-route-kindFile="0">Xem nội dung file</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="FileFunction" class="col-sm-3 col-form-label">File Hàm</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.FileFunction</p>
                                </blockquote>
                                <div>
                                    <a class="btn btn-outline-success btn-fw" asp-action="ViewFile" asp-route-id="@Model.LanguageSupId" asp-route-path="@ViewBag.pathFunc" asp-route-kindFile="1">Xem nội dung file</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Mô tả thư viện</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Description</p>
                                </blockquote>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.LanguageSupId">Edit</a> |
    <a class="btn btn-warning" asp-controller="LanguageSupports" asp-action="Index" asp-route-ExerciseID="@Model.ExerciseId">Back to List</a>
</div>