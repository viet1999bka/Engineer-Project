@model DATN.Models.Exercise

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>Details</h1>
<br />
<h4 style="color: #fc424a;">Xóa bài tập sẽ xóa đi mọi dữ liệu liên quan bao gồm test, file code đề bài cũng như dữ liệu người dùng liên quan đến bài tập này.</h4>
<h4 style="color: #fc424a;">Bạn có chắc muốn xóa không?</h4>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="display:flex; flex-direction:row;">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="ExcerciseName" class="col-sm-3 col-form-label">Tên bài tập</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.ExcerciseName </p>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="ChallengeId" class="col-sm-3 col-form-label">Thử thách</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Challenge.ChallengeName </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LevelId" class="col-sm-3 col-form-label">Thử thách</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Level.DifficultName </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-3 col-form-label">Đề bài</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Description</p>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Example" class="col-sm-3 col-form-label">Mô tả dữ liệu vào ra</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Example</p>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Input" class="col-sm-3 col-form-label">Mẫu đầu vào</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Input</p>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Output" class="col-sm-3 col-form-label">Mẫu đầu ra</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Output</p>
                                </blockquote>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" asp-controller="Exercises">
        <input type="hidden" asp-for="ExcerciseId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-action="Index">Back to List</a>
    </form>
</div>


