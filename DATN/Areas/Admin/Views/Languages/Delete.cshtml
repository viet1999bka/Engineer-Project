@model DATN.Models.Language

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý danh sách ngôn ngữ lập trình</h1>
<br />
<h4>Xóa thông tin</h4>
<br />
<h5 style="color: #fc424a;">Bạn có chắc muốn xóa không?</h5>

<br />
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="LanguageId" />
                <div style="display:flex; flex-direction:column;">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="LanguageId" class="col-sm-3 col-form-label">ID</label>
                            <div class="col-sm-9">
                                <input id="languageMode" type="text" required="required" asp-for="LanguageId" class="form-control" readonly style=" background-color: #2A3038; opacity:0.6; ">
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="LanguageName" class="col-sm-3 col-form-label">Tên ngôn ngữ</label>
                            <div class="col-sm-9">
                                <input id="languageMode" type="text" required="required" asp-for="LanguageName" class="form-control" readonly style=" background-color: #2A3038; opacity:0.6; ">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="LạnguageDisplay" class="col-sm-3 col-form-label">Tên hiển thị</label>
                            <div class="col-sm-9">
                                <input id="languageMode" type="text" required="required" asp-for="LạnguageDisplay" class="form-control" readonly style=" background-color: #2A3038; opacity:0.6; ">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="LanguageExten" class="col-sm-3 col-form-label">Đuôi file code</label>
                            <div class="col-sm-9">
                                <input id="languageMode" type="text" required="required" asp-for="LanguageExten" class="form-control" readonly style=" background-color: #2A3038; opacity:0.6; ">

                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label asp-for="LanguageMode" class="col-sm-3 col-form-label">Mode client</label>
                            <div class="col-sm-9">
                                <input id="languageMode" type="text" required="required" asp-for="LanguageMode" class="form-control" readonly style=" background-color: #2A3038; opacity:0.6; ">
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<div>
    <form asp-action="Delete" asp-controller="Languages">
        <input type="hidden" asp-for="LanguageId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-warning" asp-action="Index">Back to List</a>
    </form>
</div>
