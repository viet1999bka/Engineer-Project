@model DATN.Models.Challenge

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chi tiết thử thách</h1>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông Tin Thử thách</h4>

                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Mô tả </th>
                                <th> Chi tiết </th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                <tr>
                                    <td> 1 </td>
                                    <td> ID </td>
                                    <td>@Model.ChallengeId</td>

                                </tr>
                                <tr>
                                    <td> 2 </td>
                                    <td> Tên </td>
                                    <td>@Model.ChallengeName</td>

                                </tr>
                                <tr>
                                    <td> 3 </td>
                                    <td> Tiêu đề </td>
                                    <td>@Model.Title</td>

                                </tr>
                                <tr>
                                    <td> 4 </td>
                                    <td> Mô tả </td>
                                    <td>@Model.Description</td>

                                </tr>
                                <tr>
                                    <td> 5 </td>
                                    <td> Hình ảnh </td>
                                    <td>
                                        <img style="width:300px; height:100%; border-radius:unset;" src="~/images/challenges/@Model.Thumb" />
                                    </td>

                                </tr>

                                <tr>
                                    <td> 6 </td>
                                    <td> Ngày khởi tạo </td>
                                    @if (Model.CreatedDate.HasValue)
                                    {
                                        <td>
                                            @{DateTime date = Model.CreatedDate.Value;
                                                String year = date.ToString("dd/MM/yyyy");
                                            }
                                            @year
                                        </td>
                                    }
                                    else
                                    {
                                        <td></td>
                                    }

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>
<div>
    <a class="btn btn-success btn-md" asp-action="Edit" asp-route-id="@Model.ChallengeId">Edit</a> |
    <a class="btn btn-warning btn-fw" asp-action="Index">Back to List</a>
</div>