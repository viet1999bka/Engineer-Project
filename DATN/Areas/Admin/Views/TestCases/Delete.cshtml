@model DATN.Models.TestCase

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Xóa testcase</h1>
<br />
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div style="display:flex; flex-direction:row;">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên chủ đề</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Exercise.Challenge.ChallengeName </p>

                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tên bài tập</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Exercise.ExcerciseName </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Tình trạng</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <p>@Model.Status </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Đầu vào</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Input</p>
                                </blockquote>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Đầu ra</label>
                            <div class="col-sm-9" style="text-align:center;">
                                <blockquote class="blockquote">
                                    <p class="mb-0">@Model.Output</p>
                                </blockquote>
                            </div>
                        </div>
                    </div>

                </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="TestId" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a class="btn btn-warning"  asp-action="Index" asp-route-ExerciseID ="@Model.ExerciseId">Back to List</a>
                </form>
            </div>
        </div>

    </div>
</div>