@model DATN.Models.Education

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Chỉnh sửa học vấn</h1>

<h4>Tài khoản : @ViewBag.user</h4>
<br />
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin chi tiết</h4>

                <form class="forms-sample" asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="EducationId" type="hidden" />
                    <input type="hidden" asp-for="UserId" />
                    <div class="form-group row">
                        <label asp-for="University" class="col-sm-3 col-form-label">Tên trường</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="University" class="form-control" />
                            <span asp-validation-for="University" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Degree" class="col-sm-3 col-form-label">Hệ bậc</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="Degree" class="form-control" />
                            <span asp-validation-for="Degree" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Subject" class="col-sm-3 col-form-label">Chuyên ngành</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="StartDate" class="col-sm-3 col-form-label">Thời gian bắt đầu</label>
                        <div class="col-sm-9">
                            <input type="date" asp-for="StartDate" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="EndDate" class="col-sm-3 col-form-label">Thời gian kết thúc</label>
                        <div class="col-sm-9">
                            <input type="date" asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <a asp-controller="Educations" asp-action="Index" asp-route-id="@Model.UserId" class="btn btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

