@model IEnumerable<DATN.Models.Difficult>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Quản lý level của bài tập</h1>

<p>
    <a class="btn btn-primary btn-fw" asp-action="Create">Create New</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
    <table class="table table-bordered table-contextual">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DifficultName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DifficultName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a class="btn btn-success btn-md" asp-action="Edit" asp-route-id="@item.DifficultId">Edit</a> |
                        <a class="btn btn-info btn-md" asp-action="Details" asp-route-id="@item.DifficultId">Details</a> |
                        <a class="btn btn-danger btn-md" asp-action="Delete" asp-route-id="@item.DifficultId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
    </div>
</div>